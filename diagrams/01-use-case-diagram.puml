title Smart Hotel Management System - Use Case Diagram\n\n

left to right direction

actor "Guest\n(Customer)" as Guest
actor "Receptionist\n(Front Desk)" as Receptionist
actor "Admin\n(Manager)" as Admin
actor "Housekeeping\n(Staff)" as Housekeeping

package "Smart Hotel Management System" {
    
    package "Guest Services" {
        usecase "Register Account" as UC1
        usecase "Login to System" as UC2
        usecase "Search Available\nRooms" as UC3
        usecase "View Room Details" as UC4
        usecase "Book Room" as UC5
        usecase "Make Payment" as UC6
        usecase "View Booking\nHistory" as UC7
        usecase "Cancel Booking" as UC8
        usecase "Request Refund" as UC9
        usecase "Download Invoice" as UC10
        usecase "Update Profile" as UC11
    }
    
    package "Reception Management" {
        usecase "Check-in Guest" as UC12
        usecase "Check-out Guest" as UC13
        usecase "Assign Room" as UC14
        usecase "Handle Guest\nRequests" as UC15
        usecase "Process Walk-in\nBooking" as UC16
    }
    
    package "Administration" {
        usecase "Manage Rooms" as UC17
        usecase "Add New Room" as UC18
        usecase "Update Room\nDetails" as UC19
        usecase "Delete Room" as UC20
        usecase "Manage Bookings" as UC21
        usecase "View All Bookings" as UC22
        usecase "Update Booking\nStatus" as UC23
        usecase "Manage Users" as UC24
        usecase "View Reports &\nAnalytics" as UC25
        usecase "Generate Revenue\nReport" as UC26
        usecase "Monitor Occupancy" as UC27
    }
    
    package "Housekeeping Services" {
        usecase "View Assigned\nRooms" as UC28
        usecase "Update Room\nStatus" as UC29
        usecase "Mark Room as\nCleaned" as UC30
        usecase "Report\nMaintenance Issue" as UC31
    }
    
    package "System Functions" {
        usecase "Send Email\nNotification" as UC32
        usecase "Process Secure\nPayment" as UC33
        usecase "Validate User\nCredentials" as UC34
        usecase "Generate Invoice" as UC35
    }
}

